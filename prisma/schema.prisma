

model Teacher {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  subjects Post[]
  rating float
}
model Ratings {
    id           Int  @id @default(autoincrement())
    teacher   Teacher  @relation(fields: [teacherId], references: [id])
    teacherId  Int 
    rating  Int 
}
model Student {
    id    Int  @id @default(autoincrement())
    email  string  @unique
    name   String ?
    testScores  []TestScores
    exScores    []ExScores
}

model Subject {
  id        Int     @id @default(autoincrement())
  title     String
  description   String?
  core      Boolean @default(true)
  tutor    Teacher    @relation(fields: [tutorId], references: [id])
  tutorId  Int
}

model Exercise {
    id   Int  @id  @default(autoincrement())
    subject  Subject  @relation(fields: [subjectId], references: [id])
    subjectId Int
}

model Test {
    id   Int  @id  @default(autoincrement())
    subject  Subject  @relation(fields: [subjectId], references: [id])
    subjectId Int
}

model TestScores {
    id  Int  @id @default(autoincrement())
    test  Test  @relation(fields: [testId], references: [id])
    testId  Int
    student  Student  @relation(fields: [studentId], references: [id])
    studentId  Int
    score  float
}

model ExScores {
    id  Int  @id @default(autoincrement())
    exercise  Test  @relation(fields: [testId], references: [id])
    exId  Int
    student  Student  @relation(fields: [studentId], references: [id])
    studentId Int
    score  float
}